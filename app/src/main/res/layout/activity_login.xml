<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.retalayman.coursecenterapp.LoginActivity"
    android:background="@drawable/kk">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Login"
android:textColor="@color/bodyTextColor"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/animationforbuttonlogin"
        android:id="@+id/txtloginuser"
        android:paddingLeft="5dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:drawableRight="@drawable/logousername"
        android:layout_alignParentEnd="true"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/txtloginpass"
        android:paddingLeft="5dp"
        android:layout_below="@+id/txtloginuser"
        android:layout_marginTop="50dp"
        android:drawableRight="@drawable/logonotconfirm"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:background="@drawable/animationforbuttonlogin"
        android:layout_alignParentEnd="true"
        android:hint="Password" />
    <ImageButton
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:id="@+id/imageButton"
        android:src="@drawable/login"
        android:layout_below="@+id/txtloginpass"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No account ? Register Now"
        android:id="@+id/textView3"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/button_material_dark"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center_vertical|center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Remember Me"
        android:id="@+id/Chk"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:textSize="26dp"
        android:textStyle="bold"

        android:background="#12414040" />


</RelativeLayout>