<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.retalayman.coursecenterapp.MainDetailsActivity"
    android:background="@drawable/rev">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/animationforbuttonlogin"
        android:textStyle="bold"
        android:textSize="25dp"
        android:padding="3dp"
        android:textAlignment="center"
        android:textColor="#9f1d1d"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course Cost"
        android:id="@+id/textView8"
        android:layout_below="@+id/txtname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtcost"
        android:layout_marginLeft="9dp"
        android:background="@drawable/animationforbuttonlogin"
        android:textSize="15dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="#9f1d1d"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:textAlignment="center"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Teacher"
        android:id="@+id/textView10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtcost"

        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="8dp"
        android:id="@+id/txtteacher"
        android:textSize="15dp"
        android:background="@drawable/animationforbuttonlogin"
        android:textStyle="bold"
        android:textColor="#9f1d1d"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/txtcost"
        android:textAlignment="center"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtdetails"
        android:lines="5"
        android:padding="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/animationforbuttonlogin"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#9f1d1d"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnabdoo"
        android:src="@drawable/revv"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:layout_below="@+id/txtdetails"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginTop="38dp" />
</RelativeLayout>
