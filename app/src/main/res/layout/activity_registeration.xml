<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.retalayman.coursecenterapp.RegisterationActivity"
    android:background="@drawable/reg">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/txtname"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/animationforbuttonlogin"
        android:hint="Please enter name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/txtuser"
        android:paddingLeft="5dp"
        android:background="@drawable/animationforbuttonlogin"
        android:layout_below="@+id/txtname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:hint="Please enter username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:background="@drawable/animationforbuttonlogin"
        android:ems="10"
        android:paddingLeft="5dp"
        android:id="@+id/txtpass"
        android:layout_below="@+id/txtuser"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:hint="Please enter password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/animationforbuttonlogin"
        android:ems="10"
        android:paddingLeft="5dp"
        android:id="@+id/txtemail"
        android:layout_below="@+id/txtpass"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:hint="Please enter email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="phone"
        android:background="@drawable/animationforbuttonlogin"
        android:ems="10"
        android:paddingLeft="5dp"
        android:id="@+id/txtphone"
        android:layout_below="@+id/txtemail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:hint="Please enter phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/animationforbuttonlogin"
        android:ems="10"
        android:paddingLeft="5dp"
        android:id="@+id/txtbdate"
        android:layout_below="@+id/txtphone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:hint="Please enter birthdate" />

    <ImageButton
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:id="@+id/imgreg"

        android:src="@drawable/button"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registeration"
android:textColor="@color/bodyTextColor"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>
